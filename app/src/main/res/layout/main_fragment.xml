<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#00CED1"
    android:orientation="vertical"
    android:id="@+id/click_to_hide">
    <TextView
        android:layout_marginBottom="30dp"
        android:textSize="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/equation"
        android:typeface="sans"/>
    <EditText
        android:id="@+id/equation_box"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:hint="@string/enter_equation"
        android:typeface="sans"
        android:textSize="30dp"
        android:textColor="#ff516c1b"
        android:gravity="center"/>

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/search_button"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:text="@string/search_for_equation"
        android:background="@drawable/newbutton"
        android:textColor="#FFE4C4"
        android:textSize="32dp"
        />

</LinearLayout>